{
    "manifest_version": 2,

    "name": "Chrome pass extension",
    "description": "Integrate the awesome pass tool with Chrome",
    "version": "1.0",

    "browser_action": {
        "default_title": "Pass",
        "default_popup": "popup.html",
        "default_icon": "key-icon.png"
    },

    "permissions": [
        "nativeMessaging",
        "activeTab",
        "tabs"
    ]
}

